<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <!-- In-Process database connection-->
        <property name="hibernate.connection.url">jdbc:hsqldb:hsql://localhost/demodb2</property>
        <!-- DATASOURCE (GLASFISH) -->
        <!--  <property name="connection.datasource">demodb</property> -->
        <property name="hibernate.connection.username">user1</property>
        <property name="hibernate.connection.password">user1</property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <!--<property name="hbm2ddl.auto">update</property> -->
        <!--<property name="org.hibernate.type.descriptor.sql">DEBUG</property>-->
        <mapping class="com.mycomp.model.entity.Doctor"></mapping>
        <mapping class="com.mycomp.model.entity.Recipe"></mapping>
        <mapping class="com.mycomp.model.entity.Patient"></mapping>
    </session-factory>
</hibernate-configuration>